<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/menuItem_image"
        tools:src="@drawable/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/menuItem_textBg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#55000000"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:textSize="20sp"
            tools:text="Dirty dirty hacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:shadowColor="#8F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:id="@+id/menuItem_title"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            tools:text="These are the things I can do but decide not to."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#8F000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:id="@+id/menuItem_subtitle"/>

    </LinearLayout>





</android.support.v7.widget.CardView>

